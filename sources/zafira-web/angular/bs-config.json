{
    "port": 3000,
    "ghostMode": {
        "clicks": false,
        "location": false,
        "forms": false,
        "scroll": true
    },
    "injectChanges": true,
    "logFileChanges": true,
    "logLevel": "debug",
    "logPrefix": "gulp-patterns",
    "notify": true,
    "reloadDelay": 0,
    "online": false,
    "server": {
        "baseDir": [ "client", ".tmp" ]
    },
    "files": [ "client/**/*.*", "!client/styles/**/*.scss", ".tmp/**/*.css" ]
}
